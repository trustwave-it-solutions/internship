@using expense_tracher.Enum
@model expense_tracher.Models.IncomeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="card"
    <div class="cols-md-4">
        @if (TempData["SuccessMessage"] != null)
            {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row w-100">
                    <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6 mb-3">
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label class="control-label">Category</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.categoryList, "Id", "Name"))"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label class="control-label">PaymentMode</label>
                    <select asp-for="PaymentModeId" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMode>()"></select>
                    <span asp-validation-for="PaymentModeId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                <input type="submit" value="Edit" class="primary-btn float-end" />
                 </div>
            </div>
        </form>
    </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
