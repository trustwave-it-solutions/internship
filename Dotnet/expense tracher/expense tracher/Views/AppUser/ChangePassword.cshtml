@model expense_tracher.Models.ChangePasswordViewModel

<div class="row">
    <div class="col-sm-6 ">
            <img class="w-75" src="~/images/daco_4290998.png" />
        </div>
    <div class="col-sm-6">
           

   
        <div class="change-container d-flex justify-content-center align-items-center">
            <div class="login-form-container">
                <div class="d-flex justify-content-center mb-2">
                    <img class="logo-img" src="~/images/logo.png" alt="logo" />
                </div>
                <div class="d-flex justify-content-center mb-3">
                    <h4 class="text-white">Change password</h4>
                </div>
                <form asp-action="ChangePassword" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group mb-3">
                        <label class="control-label mb-2 text-white">old password</label>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label mb-2 text-white">new password</label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 text-white">
                        <label class="control-label mb-2">confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 mb-3">
                        <button type="submit" class="primary-btn w-100">confirm</button>
                    </div>
                </form>
                
            </div>
            </div>
            </div> 
        </div>