@model expense_tracher.Models.ProfileEditViewModel

<div class="row justify-content-end mb-4">
</div>
    <div class="row">
        <div class="col-sm-6 ">
            <img class="w-75" src="~/images/edit-profile.png" />
        </div>
        <div class="col-sm-6">
            


            <div class="change-container d-flex justify-content-center align-items-center">
                <div class="login-form-container">
                    <div class="d-flex justify-content-center mb-2">
                        <img class="logo-img" src="~/images/logo.png" alt="logo" />
                    </div>
                    <div class="d-flex justify-content-center mb-3">
                        <h4 class="text-white">Change details</h4>
                    </div>
                <form asp-action="ProfileEdit" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group mb-3">
                            <label class="control-label mb-2 text-white">username</label>
                        <input asp-for="UserName" class="form-control" />
                         <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 text-white">
                            <label class="control-label mb-2">phone number</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 text-white">
                            <label class="control-label mb-2">email</label>
                            <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-3">
                            <button type="submit" class="primary-btn w-100">change</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

  
</>
