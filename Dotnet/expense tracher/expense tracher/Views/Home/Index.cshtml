@model expense_tracher.Models.DashboardViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 heading" id="headingLarge">Welcome - @Model.UserName</h1>
    
</div>
<div class="row justify-content-end mb-4">
</div>
<div class="row">
    <div class="col-sm-6 ">
        <h5 class="text-black" id="headingLarge">Income</h5>
        <div class="bg-light p-2 rounded">
            <h6 class="text-black">Total Income: <span class="text-success">@Model.TotalIncome</span></h6>
        </div>
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th width="80%">Name</th>
                        <th width="80%">Category</th>
                        <th width="80%">Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model.Incomes)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Amount</td>
                            <td>
                                
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-layout-text-window-reverse me-3"></i></a>
                            </td>
                        </tr>
                    } 
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-6">
        <h5 class="text-black" id="headingLarge">Expense</h5>
        <div class="bg-light p-2 rounded">
            <h6 class="text-black">Total Expense: <span class="text-success">@Model.TotalExpense</span></h6>
            </div>
            <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th width="80%">Name</th>
                        <th width="80%">Category</th>
                        <th width="80%">Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Expenses)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Amount</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-layout-text-window-reverse me-3"></i></a>
                            </td>
                        </tr>
                    } 
                </tbody>
            </table>
    </div>
</div>